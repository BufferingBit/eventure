<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Events</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>


<body class="min-h-screen flex flex-col">
    <div class="flex-grow">
    <%- include('partials/header.ejs') %>

        <section class="px-8 py-6">
            <h2 class="text-xl font-semibold mb-4">Colleges</h2>
            <div class="flex flex-wrap gap-4">
                <% colleges.forEach(college=> { %>
                    <div class="bg-white shadow rounded-lg p-4 w-44 text-center">
                        <img src="/images/college_logos/<%= college.replace(/\s/g, '_') %>.png" alt="<%= college %>"
                            class="w-full h-20 object-contain mb-2"
                            onerror="this.src='/images/default-college-logo.png'" />
                        <p class="text-sm font-medium">
                            <%= college.split(" ").slice(0, 6).join(" ") %><%= college.split(" ").length > 6 ? " ..."
                                : "" %>
                        </p>
                    </div>
                    <% }) %>
            </div>
        </section>

        <% function formatDate(dateStr) { const date=new Date(dateStr); return date.toLocaleDateString('en-US', {
            year: 'numeric' , month: 'long' , day: 'numeric' }); } %>



            <section class="px-8 py-6">
                <h2 class="text-xl font-semibold mb-4">Upcoming Events</h2>
                <% if (events.length> 0) { %>
                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
                        <% events.forEach(event=> { %>
                            <div class="bg-white shadow rounded-lg overflow-hidden">
                                <img src="/images/event_logos/<%= event.title.replace(/\s/g, '_') %>.jpeg"
                                    alt="<%= event.title %>" class="w-full h-40 object-cover"
                                    onerror="this.src='/images/default-event-image.jpg'" />
                                <div class="p-4">
                                    <h3 class="text-lg font-bold">
                                        <%= event.title %>
                                    </h3>
                                    <p class="text-sm text-gray-600">
                                        <%= event.college_name %>
                                    </p>
                                    <p class="text-sm font-medium mt-2">ðŸ“… <%= formatDate(event.date) %>

                                    </p>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <p>No matching events found for "<%= searchTerm %>"</p>
                        <% } %>
            </section>


        </div>
            <%- include('partials/footer.ejs') %>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Events</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>


<body class="min-h-screen flex flex-col">
    <div class="flex-grow">
        <%- include('partials/header.ejs') %>

            <section class="px-8 py-6">
                <h2 class="text-xl font-semibold mb-4">Colleges</h2>
                <div class="flex flex-wrap gap-4">
                    <% colleges.forEach(college=> { %>
                        <a href="/college/<%= college.id %>"
                            class="bg-white shadow rounded-lg p-4 w-40 text-center hover:shadow-lg transition block">
                            <img src="/images/college_logos/<%= college.name.toLowerCase().replace(/\s/g, '_') %>.png"
                                alt="<%= college.name %>" class="w-full h-16 object-contain mb-2"
                                onerror="this.src='/images/default-college-logo.png'" />
                            <p class="text-sm font-medium">
                                <%= college.name.length> 20 ? college.name.substring(0, 20) + '...' : college.name %>
                            </p>
                        </a>
                        <% }) %>

                </div>
            </section>

            <% function formatDate(dateStr) { try { const date=new Date(dateStr); return
                date.toLocaleDateString('en-US', { year: 'numeric' , month: 'long' , day: 'numeric' }); } catch(e) {
                return dateStr; } } %>

                <section class="px-8 py-6">
                    <h2 class="text-xl font-semibold mb-4">Upcoming Events</h2>
                    <% if (events.length> 0) { %>
                        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
                            <% events.forEach(event=> { %>
                                <div class="bg-white shadow rounded-lg overflow-hidden">
                                    <img src="/images/event_logos/<%= event.title.toLowerCase().replace(/\s/g, '_') %>.jpeg"
                                        alt="<%= event.title %>" class="w-full h-40 object-cover"
                                        onerror="this.src='/images/default-event-image.jpg'" />
                                    <div class="p-4">
                                        <h3 class="text-lg font-bold">
                                            <%= event.title %>
                                        </h3>
                                        <p class="text-sm text-gray-600">
                                            <%= event.college_name %>
                                        </p>
                                        <p class="text-sm font-medium mt-2">ðŸ“… <%= formatDate(event.date) %>
                                        </p>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <% } else { %>
                            <p>No matching events found for "<%= searchTerm %>"</p>
                            <% } %>
                </section>
    </div>
    <%- include('partials/footer.ejs') %>
</body>

</html>
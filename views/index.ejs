<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Eventure - Campus Events Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <style>
        .logo-font {
            font-family: 'Playfair Display', serif;
        }

        .college-scroll::-webkit-scrollbar {
            display: none;
        }

        .college-scroll {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
    </style>
</head>

<body class="bg-[#0F172A] min-h-screen">
    <!-- Navigation Bar -->
    <nav class="bg-[#1E293B] py-4 px-6 shadow-lg">
        <div class="max-w-7xl mx-auto flex items-center justify-between">
            <!-- Logo -->
            <a href="/" class="logo-font text-3xl text-white font-bold">Eventure</a>

            <!-- Search Bar -->
            <div class="flex-1 max-w-2xl mx-8">
                <form action="/" method="GET" class="relative">
                    <input type="text" name="q" value="<%= searchQuery || '' %>" placeholder="Search"
                        class="w-full px-4 py-2 rounded-full bg-white text-gray-800 focus:outline-none focus:ring-2 focus:ring-[#3ABEFF]" />
                    <button type="submit" class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </button>
                </form>
            </div>

            <!-- Right Section -->
            <div class="flex items-center space-x-4">
                <button class="text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                    </svg>
                </button>
                <a href="/login"
                    class="bg-[#3ABEFF] text-white px-4 py-2 rounded-full hover:bg-opacity-90 transition-colors">
                    Login
                </a>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-6 py-8">
        <!-- Colleges Section -->
        <section class="mb-12">
            <h2 class="text-xl text-white font-semibold mb-6">Colleges</h2>
            <div class="college-scroll overflow-x-auto">
                <div class="flex space-x-8 pb-4">
                    <div class="flex flex-col items-center">
                        <div class="w-24 h-24 rounded-full bg-white p-2 flex items-center justify-center">
                            <img src="/images/nit-silchar-logo.png" alt="NIT Silchar" class="w-20 h-20 object-contain">
                        </div>
                        <span class="text-white text-sm mt-2">NIT SILCHAR</span>
                    </div>
                    <!-- Add more colleges here -->
                </div>
            </div>
        </section>

        <!-- Upcoming Events Section -->
        <section>
            <h2 class="text-xl text-white font-semibold mb-6">Upcoming Events</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <% if (events && events.length> 0) { %>
                    <% events.forEach(event=> { %>
                        <div
                            class="bg-[#1E293B] rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                            <div class="aspect-w-16 aspect-h-9 bg-gray-200">
                                <!-- Event image would go here -->
                            </div>
                            <div class="p-4">
                                <h3 class="text-[#3ABEFF] font-semibold mb-2">
                                    <a href="/events/<%= event.id %>">
                                        <%= event.title %>
                                    </a>
                                </h3>
                                <p class="text-gray-400 text-sm mb-2">
                                    <%= event.description %>
                                </p>
                                <div class="flex items-center text-sm text-gray-300">
                                    <span class="mr-2">
                                        <%= event.date %>
                                    </span>
                                    <span>â€¢</span>
                                    <span class="ml-2">
                                        <%= event.venue %>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <p class="text-gray-400 col-span-4 text-center py-8">No upcoming events found.</p>
                                <% } %>
            </div>
        </section>
    </main>

    <%- include('partials/footer.ejs') %>
</body>

</html>
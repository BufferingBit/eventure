<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= college.name %> | Eventure</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white dark:bg-gray-100 text-gray-800 dark:text-black min-h-screen flex flex-col">
  <div class="flex-grow">
  <%- include('../partials/header.ejs') %>

  <!-- College Info -->
  <div class="max-w-6xl mx-auto px-4 py-6 flex flex-col md:flex-row justify-between items-center md:items-start gap-8">
    <div class="flex items-center gap-6">
      <img src="/images/college_logos/<%= college.name.toLowerCase().replace(/\s/g, '_') %>.png"
                                alt="<%= college.name %>" class="w-full h-32 object-contain mb-2"
                                onerror="this.src='/images/college_logos/default-college-logo.png'" />
      <div>
        <h2 class="text-2xl font-bold whitespace-nowrap"><%= college.name %></h2>
        <p class="text-gray-500"><%= college.location %></p>
        <button class="mt-3 bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-full shadow-md text-sm">Follow</button>
      </div>
    </div>
    <div class="flex gap-6">
      <div class="bg-gradient-to-r from-indigo-300 to-indigo-500 rounded-xl px-6 py-4 text-center shadow text-white min-w-[100px]">
        <p class="text-sm font-medium">Clubs</p>
        <p class="text-2xl font-bold"><%= clubCount %></p>
      </div>
      <div class="bg-gradient-to-r from-blue-300 to-blue-500 rounded-xl px-6 py-4 text-center shadow text-white min-w-[100px]">
        <p class="text-sm font-medium">Following</p>
        <p class="text-2xl font-bold">6799</p>
      </div>
    </div>
  </div>

  <!-- Tabs -->
  <div class="flex justify-center gap-4 mb-6">
    <button class="bg-blue-700 text-white px-6 py-2 rounded-lg shadow font-medium hover:opacity-90">Clubs</button>
    <button class="bg-blue-700 text-white px-6 py-2 rounded-lg shadow font-medium hover:opacity-90">Societies</button>
    <button class="bg-blue-700 text-white px-6 py-2 rounded-lg shadow font-medium hover:opacity-90">Fests</button>
  </div>

  <!-- Events Grid -->
  <div class="max-w-6xl mx-auto px-4 mb-16">
    <h2 class="text-xl font-semibold mb-4">Upcoming Events</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
      <% events.forEach(event => { %>
        <div class="bg-white rounded-xl shadow hover:shadow-md transition overflow-hidden">
          <img src="/images/event_logos/<%= event.title.toLowerCase().replace(/\s/g, '_') %>.jpeg" 
               alt="<%= event.title %>" 
               class="w-full h-40 object-cover" 
               onerror="this.src='/images/event_logos/default-event-image.jpeg'" />
          <div class="p-4">
            <h3 class="text-lg font-semibold truncate"><%= event.title %></h3>
            <p class="text-sm text-gray-600 truncate"><%= event.college_name %></p>
            <p class="text-sm font-medium mt-2">üìÖ <%= event.formattedDate %></p>
            <p class="text-sm font-medium">‚è∞ <%= event.formattedTime %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>
  <%- include('../partials/footer.ejs') %>
</body>
</html>
